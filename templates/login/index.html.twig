{% extends 'base.html.twig' %}

{% block body %}
{# templates/security/login.html.twig #}
    {# ... you will probably extend your base template, like base.html.twig #}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb navigation">
    <li class="breadcrumb-item"><a href="{{ path('indice') }}">{% trans %}Índice{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('login') }}">Login</a></li>
  </ol>
</nav>
<div class="container">
    <div class="row justify-content-md-center">
    <div class="col-md-auto">
    

                <form class="form-signin" action="{{ path('login') }}" method="post">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2"><i class="far fa-user"></i></span>
            </div>
            <input type="text" id="username" class="form-control user-login" name="_username" placeholder="Usuario" value="{{ last_username }}" required autofocus/>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2"><i class="fas fa-lock"></i></span>
            </div>
        <input type="password" id="password" class="form-control user-password" placeholder="Contraseña" name="_password" required/>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> {% trans %}Recordar{% endtrans %}
            </label>
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <a href="{{ path('restore') }}"><p class="text-center"><small class="text-muted">Recuperar contraseña</small></p></a>
        <a href="{{ path('restore-user') }}"><p class="text-center"><small class="text-muted">Recuperar Usuario</small></p></a>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    </form>


    </div>
    </div>
</div>
<br>
{% endblock %}