{% extends 'admin/base.html.twig' %}


{% block title %}LaJamonjunta | Admin{% endblock %}

{% block body %}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Actividad</h1>
        </div>
        {% if activities == null %}
        <p>No hay Actividad</p>
        {% else %}
        <div class="table-responsive">

            <table class="table table-striped table-sm">
              <thead>
                <tr class="text-center">
                  <th># ID</th>
                  <th>LOG</th>
                </tr>
              </thead>
              <tbody class="text-center">
              {% for activity in activities %}
                <tr>
                  {% if activity.action == 10 %}
                  <td> {{activity.id}}</td>
                  <td>El usuario {{activity.target.username}} ha sido activado por {{activity.username.username}} a las {{activity.timestamp|date("m/d/Y H:i")}}</td>
                  {% elseif activity.action == 11 %}
                  <td> {{activity.id}}</td>
                  <td>El usuario {{activity.target.username}} ha sido desactivado por {{activity.username.username}} a las {{activity.timestamp|date("m/d/Y H:i")}}</td>
                  {% elseif activity.action == 12 %}
                  <td> {{activity.id}}</td>
                  <td>El proveedor {{activity.provider.name}} ha sido activado por {{activity.username.username}} a las {{activity.timestamp|date("m/d/Y H:i")}}</td>
                  {% elseif activity.action == 13 %}
                  <td> {{activity.id}}</td>
                  <td>El proveedor {{activity.provider.name}} ha sido desactivado por {{activity.username.username}} a las {{activity.timestamp|date("m/d/Y H:i")}}</td>
                  {% endif %}
                </tr>
              {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</main>

<div class="container">
  <div class="row">
    <div class="col align-self-start">
    </div>
        <div class="navigation col align-self-center">{{ knp_pagination_render(activities) }}</div>
    <div class="col align-self-end">
    </div>
  </div>
</div>
{% endblock %}