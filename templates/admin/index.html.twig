{% extends 'admin/base.html.twig' %}


{% block title %}LaJamonjunta | Admin{% endblock %}

{% block body %}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Proveedores</h1>
        </div>
        {% if providers == null %}
        <p>No hay proveedores</p>
        {% else %}
        <div class="table-responsive">

            <table class="table table-striped table-sm">
              <thead>
                <tr class="text-center">
                  <th># ID</th>
                  <th>Nombre</th>
                  <th>Ficha</th>
                  <th>Acci√≥n</th>
                </tr>
              </thead>
              <tbody class="text-center">
              {% for provider in providers %}
                <tr>
                  <td> {{provider.id}} </td>
                  <td> {{provider.name}} </td>
                  <td><a href="{{ path('show_provider', {'id': provider.id}) }}" target="_blank">Revisar Ficha</a></td>
                  {% if provider.active == false%}
                  <td><a href="{{ path('admin_activate_provider', {'id': provider.id}) }}"><button type="button" class="btn btn-success btn-sm btn-block">Activar</button></a></td>
                  {% else %}
                  <td><a href="{{ path('admin_activate_provider', {'id': provider.id}) }}"><button type="button" class="btn btn-danger btn-sm btn-block">Desactivar</button></a></td>
                  {% endif %}
                </tr>
              {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</main>
{% endblock %}