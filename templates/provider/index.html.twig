{% extends 'base.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb navigation">
    <li class="breadcrumb-item"><a href="{{ path('indice') }}">{% trans %}√çndice{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('provider') }}">{% trans %}Proveedores{% endtrans %}</a></li>
  </ol>
</nav>
<br>
<p><span class="badge badge-primary">{% trans %}Total Proveedores{% endtrans %}: {{ providers.getTotalItemCount }}</span></p>
{% if providers.getTotalItemCount == 0 %}
<p>{% trans %}No hay proveedores{% endtrans %}</p>
{% endif %}
{% for provider in providers %}

<div class="card mb-auto">
  <img class="card-img-top img-fluid" src="{{ asset('uploads/documents/') }}{{ provider.picture }}" alt="Provider image cap">
  <div class="card-body">
    <h5 class="card-title font-weight-bold">{{ provider.name }}</h5>
    <p class="card-text">{{ provider.description| truncate(300) | raw }}</p>
    <a href="{{ path('show_provider', {'id': provider.id}) }}"><p class="card-text">{% trans %}Ver Proveedor{% endtrans %}</p></a>
  </div>
</div>
<br>
{% endfor %}
<div class="container">
  <div class="row">
    <div class="col align-self-start">
    </div>
        <div class="navigation col align-self-center">{{ knp_pagination_render(providers) }}</div>
    <div class="col align-self-end">
    </div>
  </div>
</div>
{% endblock %}
